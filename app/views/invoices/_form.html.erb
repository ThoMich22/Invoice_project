<%= simple_form_for(@invoice) do |f| %>
  <form>
    <div class="form-group row">
      <%= f.input :date, as: :date, label: 'Date', class:"form-control" %>
    </div>
    <div class="form-group row">
      <%= f.input :statue, label: 'Statut', class:"form-control" %>
    </div>
    <div class="form-group row">
      <%= f.input :client_id, as: :string, label: 'Client', class:"form-control" %>
    </div>
    
    <div class="form-group text-center my-3">
      <%= f.button :submit, class:"btn btn-success" %>
    </div>
  </form>
<% end %>