<div class="container">
  <div class="row justify-content-center p-5">
    <div class="card col-6">
      <div class="card-header">
        <h5>Ajouter un nouveau client</h5>
      </div>
      <div class="card-body">
        <%= simple_form_for @products do |f| %>
          <%= f.input :title %>
          <%= f.input :description %>
          <%= f.input :price %>
          <%= f.button :submit %>
        <% end %>
      </div>
      <div class="card-footer">
        back
      </div>
    </div>
  </div>
</div>
