<div class="container"> 
  <div class="row justify-content-center p-5">
    <div class="card col-6">
      <div class="card-header">
        <h5>Client n°<%= params[:id] %></h5>
      </div>
      <div class="card-body">
        <ul>
          <li>Entreprise: <%= @product.title %></li>
          <li>Nom : <%= @product.description %></li>
          <li>Prénom : <%= @product.price %></li>
        </ul>
      </div>
      <div class="card-footer">
        <%= link_to "Retour", root_path, class:"btn btn-primary" %>
        <%= link_to "Modifier", edit_product_path(@product.id), class:"btn btn-warning" %>
        <%= link_to "Supprimer ce gossip", product_path(@product.id), data: {confirm: "Êtes-vous sûr de vouloir supprimer ce produit ?"}, class:"btn btn-danger", method: "delete"%>
      </div>
    </div>
  </div>
    
  </div>
</div>