<body class="row">
    <div class="d-flex flex-column align-items-center flex-shrink-0 text-white col-2 min-vh-100" style=" background-color: #E9EAEE;" >
      <div style="padding-top: 20%;">
        <%= link_to edit_user_registration_path(@current_user), method: "get", class:'d-flex align-items-center text-decoration-none', style:'color: #202731;' do %>
            <div class="avatar avatar-md avatar-indicators avatar-online">
              <img alt="avatar" src="https://github.com/mdo.png" alt="" width="48" height="48" class="rounded-circle me-3">
          </div>
          <p class="ps-3">Thomas <br>
            Michonneau</p>
        <% end %>
      </div>
      <div class="pt-5">
        <%= link_to new_client_path(@clients) do %>
          <button type="button" class="btn btn-primary mb-5" style="padding: 2px 20px 2px 20px;">
            <div class="d-flex align-items-center text-center fw-bold">
              Ajouter un client <span class="badge badge-light pt-2" style="padding-right: 0px;"><div class="div-badge"><i class="fi fi-rr-plus"></i></div></span>
            </div>
          </button>
        <% end %>
      </div>
      <ul class="navbar-nav nav-sm flex-column w-100">
        <li class="nav-item py-3">
          <%= link_to invoices_path, method: "get", class:'nav-link' do %>
            <span class="pe-3" style="color: #045EFC;"><i class="fi fi-rr-file"></i></span> Devis
          <% end %>
        </li>
        <li class="nav-item active py-3">
          <%= link_to clients_path, method: "get", class:'nav-link' do %>
            <span class="pe-3" style="color: #045EFC;"><i class="fi fi-rr-user"></i></span> Clients
          <% end %>
        </li>
        <li class="nav-item  py-3">
          <%= link_to invoices_path, method: "get", class:'nav-link' do %>
            <span class="pe-3" style="color: #045EFC;"><i class="fi fi-rr-layers"></i></span>Missions
          <% end %>
        </li>
      </ul>
      <div class="mt-auto"></div>
      <div class="pb-5">
        <button class="btn btn-outline-dark">
          Déconnexion
        </button>
      </div>
    </div>
    <div class="col-7 min-vh-100 d-flex align-items-center flex-column px-5" style="background-color: #F7F7F7;">
      <div class="col-11" style="margin-top: 11%; margin-bottom: 5%;">
        <h2 class="fw-bold fs-1">Clients</h2>
      </div>
      <div class="col-11 list-group list-group-checkable fw-light d-flex d-flex justify-content-center" >
        <div class="d-flex px-4 pb-1 text-special list-titre">
          <div class="col-1"></div>
          <div class="col-6 ps-5 text-list">Nom de l'entreprise</div>
          <div class="col-5 text-list">Contact</div>
          <div class="col-1"></div>
        </div>
        <% @clients.each do |client| %>
          
          <%= link_to client_path(client.id), method: "get", style:'text-decoration: none;', class:'list-group-item d-flex p-4 d-flex align-items-center', remote: true do %>
          
            <div class="col-1 d-flex justify-content-center">
              <div class="avatar avatar-md d-flex align-items-center ">
                <img alt="avatar" src="https://github.com/mdo.png" alt="" width="45" height="45" class="rounded-circle me-3">
              </div>
            </div>
            <div class="col-6 ps-5 text-list"><%= client.company_name %></div>
            <div class="col-5 text-list"><%= client.first_name %> <%= client.last_name %> </div>
          <% end %>
          
        <% end %>
      </div>
    </div>
    <div class="col-3 min-vh-100 d-flex justify-content-start flex-column" style="background-color: #F7F7F7;">
      <div class="w-75 mb-5" style="margin-top: 27%; margin-bottom: 5%;">
        <div class="list-group list-group-horizontal" id="list-tab" role="tablist">
          <h4 class="fw-bold pe-5 underligned active" id="list-home-list" data-bs-toggle="list" href="#list-home" role="tab" aria-controls="list-home">Infos</h2>
          <h4 class="fw-bold" id="list-profile-list" data-bs-toggle="list" href="#list-profile" role="tab" aria-controls="list-profile">Détails</h2>
        </div>
      </div>
      <div class="card col-10" style="height: auto;">
        <div class="tab-content" id="nav-tabContent">
          <div class="tab-pane fade show active" id="list-home" role="tabpanel" aria-labelledby="list-home-list">
            <div class="d-flex flex-column align-items-center py-5" id="card-client">
              
            </div> 
          </div>
          <div class="tab-pane fade" id="list-profile" role="tabpanel" aria-labelledby="list-profile-list">
            <div class="d-flex flex-column align-items-center ">
              <div class="mb-3 mt-5 col-8">
                <h6 class="fw-light">Devis réalisés avec <span class="fw-bold">Le Cercle Condorcet de Lyon</span> :</h6>
              </div>
              <div class="col-8 d-flex align-items-start">
                <ul class="list-group list-group-flush w-100">
                 <a href="#" class="list-group-item2 d-flex gap-3 py-3">
                    <div class="d-flex gap-2 w-100 justify-content-between">
