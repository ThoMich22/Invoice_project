<div class="container-fluid">
 
  <div class="card m-5">
    <div class="card-header">
      <h5>Liste des clients</h5>      
    </div>
    <div class="card-body">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nom de l'entreprise</th>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Adresse</th>
            <th scope="col">N° de téléphone</th>
            <th scope="col">Email</th>
            <th>Action</th>
          </tr>
        </thead>
        <% @clients.each do |client| %>
        <tbody>
          <tr>
            <th scope="row"><%= client.id %></th>
            <td><%= client.company_name %></td>
            <td><%= client.first_name %></td>
            <td><%= client.last_name %></td>
            <td><%= client.adress %></td>
            <td><%= client.phone_number %></td>
            <td><%= client.mail %></td>
            <td> 
              <%= link_to "Voir", client_path(client.id), method: "get" %>
              <%= link_to "Modifier", edit_client_path(client.id) %>
              <%= link_to "Supprimer", client_path(client.id), data: {confirm: "Êtes-vous sûr de vouloir supprimer ce client ?"}, method: "delete" %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <div class="card-footer">
      <%= link_to "Ajouter un nouveau client", new_client_path(@clients), class:"btn btn-primary" %>
      <%= link_to "Ajouter un nouveau produit", new_product_path, class:"btn btn-warning" %>
      
    </div>
  </div>
  
</div>