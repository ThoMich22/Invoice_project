<div class="container">
  <div class="row vh-100 align-items-center justify-content-center">
    <div class="col-8">
      <h1>Log in</h1>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group text-white">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" }, class:"form-control" %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" }, class:"form-control" %>
            <%= f.input :remember_me, class:'form-check-input', as: :boolean if devise_mapping.rememberable?  %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class:'btn btn-primary' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
  </div>
</div>
